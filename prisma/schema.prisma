datasource db {
    url         = env("DB_URL")
    provider    = "postgresql"
}

generator client {
    provider    = "prisma-client-js"
}

model User {
    id          Int         @id @default(autoincrement())
    login       String      @unique
    password    String
    email       String?      @unique
    firstName   String
    lastName    String
    phoneNumber String      
    role        Role        @default(USER)
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
}

enum Role {
    USER
}